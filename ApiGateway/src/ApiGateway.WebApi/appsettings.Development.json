{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Jwt": {
    "SecretKey": "ThisIsASecretKeyForJwtTokenGeneration",
    "ExpirationInMinutes": 60
  },
  "ReverseProxy": {
    "Routes": {
      "loginRoute": {
        "ClusterId": "authCluster",
        "Match": {
          "Path": "/api/login"
        },
        "Transforms": [
          {
            "PathPattern": "/api/auth/login"
          }
        ]
      },
      "usersRoute": {
        "ClusterId": "usersCluster",
        "Match": {
          "Path": "/api/users"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/api"
          }
        ],
        "AuthorizationPolicy": "Default"
      },
      "postsRoute": {
        "ClusterId": "postsCluster",
        "Match": {
          "Path": "/api/posts"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/api"
          }
        ],
        "AuthorizationPolicy": "Default"
      }
    },
    "Clusters": {
      "authCluster": {
        "Destinations": {
          "authApi": {
            "Address": "http://auth:8080"
          }
        }
      },
      "usersCluster": {
        "Destinations": {
          "jsonplaceholder": {
            "Address": "https://jsonplaceholder.typicode.com"
          }
        }
      },
      "postsCluster": {
        "Destinations": {
          "jsonplaceholder": {
            "Address": "https://jsonplaceholder.typicode.com"
          }
        }
      }
    }
  }
}
